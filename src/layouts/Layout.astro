        font-display: swap;
    }
    
    @font-face
    {
        font-family: "CircularSp";
        src: url("/fonts/CircularSp-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }
    
    @font-face
    {
        font-family: "CircularSp";
        src: url("/fonts/CircularSp-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
